@model StudioVeterinario.Models.Animale

@{
    ViewBag.Title = "Create";
}

<h2>Registrazione Animale</h2>


@using (Html.BeginForm("Create", "Animale", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DataRegistrazione, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataRegistrazione, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.DataRegistrazione, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ColoreMantello, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ColoreMantello, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ColoreMantello, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataNascita, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataNascita, new { htmlAttributes = new { @class = "form-control", type="date" } })
                @Html.ValidationMessageFor(model => model.DataNascita, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Microchip, htmlAttributes: new { @class = "control-label microchip" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Microchip)
                    @Html.ValidationMessageFor(model => model.Microchip, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NumeroMicrochip, htmlAttributes: new { @class = "control-label col-md-2 numeroMicrochip" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumeroMicrochip, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumeroMicrochip, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group ">
            @Html.LabelFor(model => model.Smarrito, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Smarrito)
                    @Html.ValidationMessageFor(model => model.Smarrito, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group form-proprietario">
            @Html.LabelFor(model => model.NominativoProprietario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NominativoProprietario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NominativoProprietario, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group form-smarrito">
            @Html.LabelFor(model => model.Foto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FileFoto, new { @class = "form-control", @type = "file" })
                @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group ">
            @Html.LabelFor(model => model.DataInizioRicovero, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataInizioRicovero, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.DataInizioRicovero, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Id_TipologiaAnimale, "Tipo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Id_TipologiaAnimale", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id_TipologiaAnimale, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registra" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("< Vai alla Lista Animali", "Index")
</div>

<script type="text/javascript">
    hideMicrochip();
    hideSmarrito();
    

    function hideMicrochip() {
        $('#NumeroMicrochip').hide();
        $('.numeroMicrochip').hide();
    }

    function showMicrochip() {
        $('#NumeroMicrochip').show();
        $('.numeroMicrochip').show();

    }

    $('#Microchip').click(function () {
        if ($('#Microchip').is(":checked")) {
            showMicrochip();
        } else {
            hideMicrochip();
        }

    })
    //Visualizza campi se smarrito
    function hideSmarrito() {
        $('.form-proprietario').show();
        $('.form-smarrito').hide();  
    }

    function showSmarrito() {
        $('.form-proprietario').hide();
        $('.form-smarrito').show();
     }


    $('#Smarrito').click(function () {

    if ($('#Smarrito').is(":checked")) {
        showSmarrito();
    } else {
        hideSmarrito();
    }

    })




</script>












@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
